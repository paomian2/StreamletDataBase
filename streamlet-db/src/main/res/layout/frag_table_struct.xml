<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:ignore="HardcodedText,RtlHardcoded"
    android:background="#efefef">

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="44dp">
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tvTableName"
            android:text="请输入表名："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edtTableName"
            android:paddingLeft="5dp"
            android:hint="请输入表名"
            android:layout_marginLeft="5dp"
            android:padding="2dp"
            android:textSize="14sp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/border_edit"
            android:layout_width="180dp"
            android:layout_height="30dp"
            tools:ignore="Autofill,LabelFor,RtlHardcoded,TextFields" />
        <ImageView
            android:id="@+id/ivEditColumn"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/column_add"
            android:layout_width="17dp"
            android:layout_height="17dp"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:src="@mipmap/column_refresh"
            android:layout_width="18dp"
            android:layout_height="18dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>
    <com.streamlet.db.ui.CreateTableLayout
        android:id="@+id/layoutTable"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>