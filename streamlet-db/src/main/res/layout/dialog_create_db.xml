<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:background="@drawable/rect_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="300dp"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:text="新增数据库"
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="数据库类型：SQLite 3"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText"
            />
        <TextView
            android:id="@+id/tvPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="45dp"
            android:paddingLeft="15dp"
            android:text="文件：data/data/包名/databases"
            android:textColor="@color/black"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlHardcoded"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:minHeight="45dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="数据库名称："
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:ignore="HardcodedText"
                />
            <EditText
                android:id="@+id/edtName"
                android:digits="@string/db_name_digits"
                android:hint="请输入数据库名字"
                android:textSize="13sp"
                android:layout_marginRight="15dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,TextFields" />

        </LinearLayout>
        <View
            android:layout_marginTop="17dp"
            android:background="#efefef"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/tvExist"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:background="@drawable/selector_dialog_button"/>
            <View
                android:background="#efefef"
                android:layout_width="1px"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvOk"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/selector_dialog_button"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
